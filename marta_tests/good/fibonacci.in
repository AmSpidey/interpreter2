// Let's test recursion and one parameter in a function!

void putLn() {
    show "\n";
    ~;
}

int fib (int n) {
    show "n is equal to "; show n; putLn();
    if (n == 0) {
        ~0;
    }
    show "just checked if n == 0"; putLn();
    if (n == 1) {
        ~1;
    }
    int fn_1 = fib (n - 1);
    int fn_2 = fib (n - 2);
    ~fn_1 + fn_2;
}

int main () {
    show "main started"; putLn();
    ~fib (8);
}
